@model productViewModel

@{
    ViewData["Title"] = "Addproduct";
}

<h1 class="center">Addproduct</h1>

    <div class="center1">
        <form asp-action="Addproduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(w => w.Image1)
            @Html.EditorFor(w => w.Image1, additionalViewData: new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Image1", @type = "file", @Name = "Imag1" } })
            @Html.ValidationMessageFor(ww => ww.Image1, "", htmlAttributes: new { @class = "text-secondary" })*@

                <label asp-for="Image1" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image1" class="form-control custom-file-input" />
                    <label class="custom-file-label">choose image</label>
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group">
                <label asp-for="Image2" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image2" class="form-control custom-file-input" />
                    <label class="custom-file-label">choose image</label>
                    <span asp-validation-for="Image2" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Image3" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image3" class="form-control custom-file-input" />
                    <label class="custom-file-label">choose image</label>
                    <span asp-validation-for="Image3" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>

            @section Scribts{

                <script>

                    $(document).ready(function () {

                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);

                        });

                    });
                </script>

            }
        </form>
    </div>


<div class="center">
    <a asp-action="products" class="btn btn-primary">Back</a>
</div>

