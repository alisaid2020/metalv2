<div class="container-fluid col-8" id="inpsearch">
    <div class="input-group md-form form-sm form-2 pl-0">
        <input class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" id="inputtext">
        <div class="input-group-append">
            <span class="input-group-text red lighten-3" id="basic-text1">
                <i class="fas fa-search text-grey"
                   aria-hidden="true"></i>
            </span>
        </div>
    </div>
</div>


<div class="container-fluid center">

    <h2 class="center">products</h2>
   
        <a asp-action="Addproduct" asp-controller="Home" class="btn btn-success">AddProduct</a>
        <br />

        @foreach (var item in Model)
        {
            <div id="products-container">
                <div class="card" style="width: 18rem; position:relative; display:inline-block;">
                    <a href="~/images/@item.Image1"><img src="~/images/@item.Image1" class="card-img-top" alt="image info" id="imgcard"></a>    
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price جنيه</p>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Delet" asp-controller="Home" asp-route-id="@item.Id" class=" btn btn-danger" onclick="return confirm('Are you sure?');">Delet</a>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-info">Edit</a>

                    </div>
                </div>

            </div>
  
        }
      


</div>
<br />
@section scripts

    {

    <script>
        $("#inputtext").keyup(function () {
            var inputval = $(this).val().toLowerCase();
            $(".card").each(function () {

                $(this).toggle($(this).text().toLowerCase().indexOf(inputval) > -1)
            });

        });
    </script>
    }